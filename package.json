{
  "name": "readOnBush",
  "displayName": "Read On Bush",
  "description": "在vscode状态栏阅读小说。支持: 1.翻页 2.跳转到指定页码 3.暂停阅读(隐藏阅读内容) 4.快捷键阅读(Reading和Coding模式随时切换, 避免编码时快捷键冲突)",
  "version": "1.0.0",
  "publisher": "moyuderen",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
   "keywords": [
    "read",
    "阅读",
    "小说",
    "摸鱼",
    "vscode 状态栏"
  ],
  "icon": "public/moyu.png",
  "activationEvents": [
    "onView:bookList"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [ 
      {
        "command": "readOnBush.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "readOnBush.switchReadingMode",
        "title": "快捷键激活",
        "category": "Read On Bush",
        "icon": "",
        "shortTitle": "激活阅读快捷键"
      },
      {
        "command": "readOnBush.switchCodingMode",
        "title": "快捷键禁用",
        "category": "Read On Bush",
        "icon": "",
        "shortTitle": "禁用阅读快捷键"
      },
      {
        "command": "readOnBush.prev",
        "title": "状态栏读书：上一行"
      },
      {
        "command": "readOnBush.next",
        "title": "状态栏读书：下一行"
      },
      {
        "command": "readOnBush.jump",
        "title": "状态栏读书：跳转"
      },
      {
        "command": "readOnBush.deleteEntry",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "readOnBush.import",
        "title": "Import"
      }
    ],
    "keybindings": [
      {
        "command": "readOnBush.prev",
        "key": "ctrl+left",
        "mac": "cmd+left",
        "when": "readOnBush.isReadingMode == true"
      },
      {
        "command": "readOnBush.next",
        "key": "ctrl+right",
        "mac": "cmd+right",
        "when": "readOnBush.isReadingMode == true"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "readOnBush",
          "title": "Read On Bush",
          "icon": "public/logo.svg"
        }
      ]
    },
    "views": {
      "readOnBush": [
        {
          "id": "bookList",
          "name": "书架"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "content",
        "contents": "[Hello World](command:readOnBush.helloWorld)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "readOnBush.deleteEntry",
          "group": "inline",
          "when": "view == bookList"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "linebyline": "^1.3.0"
  }
}
