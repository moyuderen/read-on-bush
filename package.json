{
  "name": "readOnBush",
  "displayName": "readOnBush",
  "description": "readOnBush",
  "version": "0.0.2",
  "publisher": "moyuderen",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:bookList"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "readOnBush.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "readOnBush.prev",
        "title": "状态栏读书：上一行"
      },
      {
        "command": "readOnBush.next",
        "title": "状态栏读书：下一行"
      },
      {
        "command": "readOnBush.deleteEntry",
        "title": "Delete"
      },
      {
        "command": "readOnBush.import",
        "title": "Import"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "readOnBush",
          "title": "Fish Read",
          "icon": "public/logo.svg"
        }
      ]
    },
    "views": {
      "readOnBush": [
        {
          "id": "bookList",
          "name": "书架"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "content",
        "contents": "[Hello World](command:readOnBush.helloWorld)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "readOnBush.deleteEntry",
          "group": "inline",
          "when": "view == bookList"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "linebyline": "^1.3.0"
  }
}
